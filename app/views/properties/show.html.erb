<h1>閲覧</h1>
<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<h3><%= "-"*40%></h3>

<% @stations.each_with_index do |s,i| %>
  <h4>最寄り駅<%= i + 1%></h4>
  <p>路線名 <%= s.rail_name %></p>
  <p>駅名 <%= s.name %></p>
  <p>徒歩分数 <%= s.minutes_on_foo %></p>
<% end %>

