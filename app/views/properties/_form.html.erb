<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, value: '物件名' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent, value: '賃料' %>
    <%= form.text_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address, value: '住所' %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :age, value: '築年数' %>
    <%= form.text_field :age %>
  </div>

  <div class="field">
    <%= form.label :remarks, value: '備考' %>
    <%= form.text_area :remarks %>
  </div>

  <%= form.fields_for :stations, local: true do |f| %>
    <div>
      <p>最寄り駅<%= f.index + 1 %></p>
      <%= f.label :rail_name, value: '路線名'%>
      <%= f.text_field :rail_name%>
      <%= f.label :name, value: '駅名'%>
      <%= f.text_field :name %>
      <%= f.label :minutes_on_foo, value: '徒歩分数'%>
      <%= f.text_field :minutes_on_foo %>
    </div>
  <% end %>
  <br>
  <div class="actions">
    <%= form.submit '登録する' %>
  </div>
<% end %>
